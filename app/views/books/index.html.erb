<% if flash[:delete] %>
    <p id = "delete"><%= flash[:delete] %></p>
<% end %>

<% if flash[:error_messages] %>
    <div class="alert alert-danger">
        <ul>
            <% flash[:error_messages].each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<h1>Books</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr> 
    <% end %>
    </tbody>
</table>

    <h2>New book</h2>

<%= form_for(@book) do |f| %>

    <% if @book.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@book.errors.count, "error") %> prohibited this article from being saved:</h2>
                <ul>
                    <% @book.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
        </div>
    <% end %>

        <% if @book.errors.any? %>
            <div class="field">
                <div class="field_with_errors">
                    <label for="book_title">Title</label>
                </div>
                <div class="field_with_errors">
                    <%= f.text_field :title %>
                </div>
            </div>
            <div class="field">
                <div class="field_with_errors">
                    <label for="book_body">Body</label>
                </div>
                <div class="field_with_errors">
                    <%= f.text_area :body %>
                </div>
            </div>
            <div class="actions">
                <%= f.submit "Update Book" %>
            </div>
        <% else %>
                <div class="field">
                    <label for="book_title">Title</label>
                    <%= f.text_field :title %>
                </div>
                <div class="area">
                    <label for="book_body">Body</label>
                    <%= f.text_area :body %>
                </div>
                <div class="actions">
                    <%= f.submit "Create Book" %>
                </div>
        <% end %>
<% end %>

